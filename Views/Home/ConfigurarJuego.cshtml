@{
    ViewData["Title"] = "ConfigurarJuego";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<form action='@Url.Action("Comenzar")' class="custom-form">
    <div class="mb-3">
        <label for="dificultad" class="form-label">Seleccione la Dificultad</label>
        <select id="dificultad" class="form-select" aria-label="Seleccione la Dificultad" name="dificultad" required>
            <option value="" disabled selected>Seleccione la Dificultad</option>
            @for (int i = 0; i < ViewBag.Dificultades.Count; i++)
            {
                <option value="@ViewBag.Dificultades[i].IdDificultad">@ViewBag.Dificultades[i].Nombre</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="categoria" class="form-label">Seleccione la Categoría</label>
        <select id="categoria" class="form-select" aria-label="Seleccione la Categoría" name="categoria" required>
            <option value="" disabled selected>Seleccione la Categoría</option>
            @for (int i = 0; i < ViewBag.Categorias.Count; i++)
            {
                <option value="@ViewBag.Categorias[i].IdCategoria">@ViewBag.Categorias[i].Nombre</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="username" class="form-label">Nombre de Usuario</label>
        <input id="username" class="form-control" type="text" name="username" placeholder="Ingrese el nombre de usuario" required>
    </div>

    <button type="submit" class="btn btn-primary w-100">Jugar</button>
</form>
